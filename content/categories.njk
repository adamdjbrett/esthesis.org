---
eleventyComputed:
  title: "{{wordpress.config.categories_title}}"
  description: "{{wordpress.config.categories_description}}"
permalink: /categories/
layout: base.njk
eleventyNavigation:
  key: Categories
  order: 3
---

<header class="container-fluid border-bottom">
<div class="container col-md-10 mx-auto p-3 p-md-5 text-center">
<h1 class="text-uppercase text-hero-post fw-bold"><a href="{{page.url}}" class="none">
{{wordpress.config.categories_title}}
</a></h1>
</div>
</header>
<section class="container-fluid border-bottom">
<div class="col-md-8 mx-auto mt-5">
<div class="row justify-content-center text-center mb-5">
{% for category in collections.categories | sortAlphabetically %}
<div class="col-md-3 p-3">
<div class="shadow-sm rounded-3">
<a href="/category/{{ category.slug }}/" 
class="p-3 p-md-5 none">
<h3>{{ category.name }}</h3>
<p>{{category.description}}</p>
<p><span class="badge text-bg-dark">{{ category.posts.length }} Posts</span></p>
</a>
</div>
</div>
{% endfor %}
</div>
</div>
</div>
</section>