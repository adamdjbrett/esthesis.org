---
eleventyComputed:
  title: "{{wordpress.config.authors_title}}"
  description: "{{wordpress.config.authors_description}}"
permalink: /authors/
layout: base.njk
eleventyNavigation:
  key: Authors
  order: 5
---
<header class="container-fluid border-bottom">
<div class="container col-md-10 mx-auto p-3 p-md-5 text-center">
<h1 class="text-uppercase text-hero-post fw-bold"><a href="{{page.url}}" class="none">
{{wordpress.config.authors_title}}
</a></h1>
</div>
</header>
<div class="container-fluid bg-light border-bottom mb-3">
<div class="col-md-10 mx-auto mt-5 p-3 mb-5">
{% if collections.authors and collections.authors.length > 0 %}
{% set sortedAuthors = collections.authors | sortAlphabetically('name') %}
<div class="row justify-content-center">
{% for author in sortedAuthors %}
{% set authorUrl = "/author/" + author.slug + "/" %}
<div class="col-md-4 p-3 mt-3 mb-3">
<div class=" img-post-list">
<div class="bg-white">
{% if author.profile_picture %}<a href="{{ authorUrl }}" title="{{author.name}}">
<img class="img-fluid mb-2 author-list-image"  width="100%" height="100%" 
alt="{{author.name}}" src="{{author.profile_picture}}"/></a>{% endif %}
<div class="p-2">
<a href="{{ authorUrl }}" class="none d" title="{{author.name}}">
<h3 class="fw-bold">{{ author.name }} </h3><hr/>
<p><span class="fw-semibold">About</span><br/>{{author.description}}</p>
</a>
<hr/>
<p class="small">website: <span class="float-end">{{author.website}}</span></p><hr/>
<p class="small">Total Post: <span class="badge float-end text-bg-dark rounded">{{ author.posts.length }} Post</span></p>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
{% else %}
<p>Nothing author posts.</p>
{% endif %}
</div>
</div>

