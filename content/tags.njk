---
eleventyComputed:
  title: "{{wordpress.config.tags_title}}"
  description: "{{wordpress.config.tags_description}}"
permalink: /tags/
layout: base.njk
eleventyNavigation:
  key: Tags
  order: 4
---
<header class="container-fluid border-bottom">
<div class="container col-md-10 mx-auto p-3 p-md-5 text-center">
<h1 class="text-uppercase text-hero-post fw-bold"><a href="{{page.url}}" class="none">
{{wordpress.config.tags_title}}
</a></h1>
</div>
</header>

<section class="container-fluid border-bottom">
<div class="container">
<div class="row justify-content-center text-center mb-5 mt-5">
{% for tag in collections.tagList | filterTagList | sortAlphabetically %}
{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<div class="col-md-3 col-6 p-3">
<a href="{{ tagUrl }}" class="btn btn-light none">
{{ tag }}
</a>
</div>
{% endfor %}
</div>
</div>
</section>