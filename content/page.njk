---
pagination:
  data: pages
  size: 1
  alias: page
  addAllPagesToCollections: true
eleventyExcludeFromCollections: true
eleventyComputed:
  permalinkBypassOutputDir: true 
  permalink: "/{{ page.slug }}/"
  title: "{{ page.title }}"
layout: base.njk
---
<header class="container-fluid border-bottom">
<div class="container col-md-10 mx-auto p-3 p-md-5 text-center">
<h1 class="text-uppercase text-hero-post fw-bold"><a href="{{page.url}}" class="none">
{{title}}
</a></h1>
</div>
</header>
{% if page.featuredImage %}
<section class="container">
<div class="rounded-3 border border-dark">
<img class="img-fluid post-list-image rounded-3" width="100%" height="100%" 
alt="{{page.title}}"
src="{{page.featuredImage}}"/>
</div>
</section>
{% endif %}
<section class="container-fluid border-bottom">
<div class="row p-3 mt-3 mb-3">
<article class="col-md-8 mx-auto p-3">
<div class="p-3 border-widget-top">
<div class="row p-2">
<content class="content col-md-12 mb-3 mt-3 normal">
{% set contentWithIDs = page.content | default('') | addHeadingIDs %}
<content class="content col-md-12 mb-5 mt-3 normal">
<span class="small float-end text-secondary">{{ page.date | default(null) | readableDate("dd MMMM yyyy") }}</span>
  {% if wordpress.config.widget_show_toc %}<div class="p-3 mb-3 tocus">
<h3 class="fw-semibold">{{wordpress.config.widget_toc}}</h3>
{{ contentWithIDs | toc | safe }} 
</div>{% endif %}
<heading-anchor>
{{ contentWithIDs | safe }}
</heading-anchor>
</content>
</div>
</div>
</article>
</div>
</section>